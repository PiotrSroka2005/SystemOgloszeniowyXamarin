<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemOgloszeniowyXamarin.Strony.Admin.DodajKategorie" NavigationPage.HasNavigationBar="False">

    <Frame CornerRadius="15" Padding="60" BorderColor="#222222"  Background="gray" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
        <StackLayout>
            <Label Text="Nazwa kategorii:" HorizontalOptions="Start" FontSize="20" VerticalOptions="StartAndExpand" Margin="20,20,0,20" />
            <Entry x:Name="NameEntry" HorizontalOptions="StartAndExpand" FontSize="16" HeightRequest="55" VerticalOptions="StartAndExpand" Margin="20,5,20,20" WidthRequest="200" />

            <Button x:Name="LoginButton" Text="Dodaj" CornerRadius="35" TextTransform="None" BackgroundColor="#222222" TextColor="White" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,20,0,0" Clicked="DodajKat" />

            <Button Text="Zarządzanie kategoriami" CornerRadius="35" TextTransform="None" BackgroundColor="#222222" TextColor="White" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Start" Margin="0,20,0,0" Clicked="ZarzadzajKategoriami" />
        </StackLayout>
    </Frame>
</ContentPage>