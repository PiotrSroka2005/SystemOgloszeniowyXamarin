<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SystemOgloszeniowyXamarin.Strony.Admin.DodajOgloszenie" NavigationPage.HasNavigationBar="False">

    <ScrollView>
        <Frame CornerRadius="5" WidthRequest="250" HeightRequest="1240" BorderColor="#222222" HorizontalOptions="Center" BackgroundColor="Gray" HasShadow="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Text="Tytul:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="0" x:Name="TxBTytul" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="1" Text="Nazwa stanowiska:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="1" x:Name="TxBNazwaStanowiska" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="2" Text="Poziom stanowiska:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="2" x:Name="TxBPoziomStanowiska" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="3" Text="Rodzaj pracy:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="3" x:Name="TxBRodzajPracy" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="4" Text="Wymiar zatrudnienia:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="4" x:Name="TxBWymiarZatrudnienia" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="5" Text="Rodzaj umowy:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="5" x:Name="TxBRodzajUmowy" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="6" Text="Najmn wynagrodz:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="6" x:Name="TxBNajmniejszeWynagrodzenie" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="7" Text="Najw wynagrodz:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="7" x:Name="TxBNajwiekszeWynagrodzenie" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="8" Text="Dni pracy:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="8" x:Name="TxBDniPracy" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="9" Text="Godziny pracy:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="9" x:Name="TxBGodzinyPracy" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="10" Text="Data ważności:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <DatePicker Grid.Row="10" x:Name="TxBDataWaznosci" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="11" Text="Obowiązki:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="11" x:Name="TxBObowiazki" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="12" Text="Wymagania:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="12" x:Name="TxBWymagania" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="13" Text="Benefity:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="13" x:Name="TxBBenefity" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="14" Text="Informacje:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="14" x:Name="TxBInformacje" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="15" Text="Zdjęcie:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Entry Grid.Row="15" x:Name="TxBZdjecie" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="16" Text="Firma:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Picker Grid.Row="16" x:Name="FirmaComboBox" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Label Grid.Row="17" Text="Kategoria:" FontSize="14" HorizontalOptions="Start" VerticalOptions="Start" />
                <Picker Grid.Row="17" x:Name="KategoriaComboBox" FontSize="16" HeightRequest="55" HorizontalOptions="Start" VerticalOptions="Start" WidthRequest="200" />

                <Button Grid.Row="18" x:Name="Dodaj" CornerRadius="35" TextTransform="None" BackgroundColor="#222222" TextColor="White" Clicked="Dodaj_Click" Text="Dodaj" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Start"  />

                <Button Grid.Row="19" Text="Zarządzaj ogłoszeniami" CornerRadius="35" TextTransform="None" BackgroundColor="#222222" TextColor="White" Clicked="ZarzadzajOgloszeniami" WidthRequest="160" HorizontalOptions="Center" VerticalOptions="Start" />
            </Grid>
        </Frame>
    </ScrollView>
</ContentPage>